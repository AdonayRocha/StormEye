@page
@model StormEye.Web.Pages.IndexModel

<h2>Catástrofes e Cartilhas</h2>

@if (Model.Catastrofes == null || Model.Catastrofes.Count == 0)
{
    <p>Não há catástrofes cadastradas.</p>
}
else
{
    <div class="row">
        @foreach (var cat in Model.Catastrofes)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">@cat.NomeCatastrofeM (@cat.Data.ToShortDateString())</h4>
                        <p><strong>Cartilhas associadas:</strong></p>
                        <ul>
                            @foreach (var ct in cat.Cartilhas)
                            {
                                <li>@ct.Nome – @ct.Descricao</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}
